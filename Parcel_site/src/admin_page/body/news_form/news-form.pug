include ../../../ui_kit/buttons/default-button.pug
form.news-form#news-from-id(action="")
    div.scrollbar
    textarea#text-area(name="news-text-area", cols="30", rows="10", placeholder = "Введите информацию в текстовое поле", maxlength="150")
    div.symbols Символов 0/150
    br
    input#image-select(type="file")
    .image-select-label
        img.image-select-label__icon(src="https://c.radikal.ru/c37/1911/94/2797f15a58ac.png")
        label.image-select-label__label(for="image-select") + Добавить изображение
        .image-select-label__hidden-form-elements
            img.image-select-label__avatar(src="" width=34 height=34)
            p.image-select-label__image-path 
            button.image-select-label__cancel(type="button")
                img(src="https://c.radikal.ru/c12/1911/3e/a317b45bdbcd.png" width=18 height=18)
        .image-select-label__hidden-alert
            p.image-select-label__alert-message Неверный формат изображения
    input#admin-submit-button(type="submit")
    label(for="admin-submit-button")
        +default-button("admin-form-submit-button", "Применить")